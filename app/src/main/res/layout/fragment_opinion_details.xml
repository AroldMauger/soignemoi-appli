<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/closeModal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\uf057"
        android:padding="10dp"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:fontFamily="@font/fa_solid900"
        android:layout_alignParentEnd="true"
        />


    <TextView
        android:id="@+id/otherInfos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informations sur le RDV"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_sans_font_family"
        android:textFontWeight="800"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otherInfos"
        android:orientation="vertical"
        android:background="@color/grey"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:id="@+id/appointment_info"
        >
        <EditText
            android:id="@+id/date_modal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date : 16/03/2024"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/time_modal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Heure : 14h00"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/reason_modal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Motif : Vidange"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/car_modal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Véhicule : Toyota Yaris"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/customer_modal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Client : M. DUBOIS"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:enabled="false"
            />

        <EditText
            android:id="@+id/phone_modal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Téléphone : 06 51 42 41 41"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:enabled="false"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/appointment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RDV TERMINÉ"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODIFIER"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUPPRIMER"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>
</RelativeLayout>
